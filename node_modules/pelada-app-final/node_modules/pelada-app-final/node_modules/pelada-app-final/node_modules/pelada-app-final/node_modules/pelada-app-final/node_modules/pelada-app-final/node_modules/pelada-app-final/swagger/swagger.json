{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Futebol App API",
    "description": "API para gerenciamento de jogadores e times de futebol"
  },
  "host": "localhost:3000",
  "basePath": "/api",
  "schemes": ["http"],
  "paths": {
    "/jogadores": {
      "post": {
        "summary": "Adicionar um novo jogador",
        "consumes": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "Jogador",
            "description": "Dados do jogador",
            "schema": {
              "$ref": "#/definitions/Jogador"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Jogador adicionado com sucesso"
          }
        }
      },
      "get": {
        "summary": "Listar todos os jogadores",
        "responses": {
          "200": {
            "description": "Lista de jogadores",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/JogadorDTO"
              }
            }
          }
        }
      }
    },
    "/jogadores/{id}": {
      "get": {
        "summary": "Obter um jogador específico",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Detalhes do jogador",
            "schema": {
              "$ref": "#/definitions/Jogador"
            }
          },
          "404": {
            "description": "Jogador não encontrado"
          }
        }
      },
      "delete": {
        "summary": "Deletar um jogador",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "204": {
            "description": "Jogador deletado com sucesso"
          }
        }
      }
    },
    "/jogadores/ranking": {
      "get": {
        "summary": "Obter ranking dos jogadores",
        "responses": {
          "200": {
            "description": "Ranking dos jogadores",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/JogadorDTO"
              }
            }
          }
        }
      }
    },
    "/times": {
      "post": {
        "summary": "Adicionar um novo time",
        "consumes": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "Time",
            "description": "Dados do time",
            "schema": {
              "$ref": "#/definitions/Time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Time adicionado com sucesso"
          }
        }
      },
      "get": {
        "summary": "Listar todos os times",
        "responses": {
          "200": {
            "description": "Lista de times",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Time"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Jogador": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "nome": {
          "type": "string"
        },
        "apelido": {
          "type": "string"
        },
        "gols": {
          "type": "integer"
        },
        "assistencias": {
          "type": "integer"
        },
        "vitorias": {
          "type": "integer"
        },
        "time": {
          "$ref": "#/definitions/Time"
        }
      }
    },
    "JogadorDTO": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "apelido": {
          "type": "string"
        },
        "gols": {
          "type": "integer"
        },
        "assistencias": {
          "type": "integer"
        }
      }
    },
    "Time": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "nome": {
          "type": "string"
        },
        "jogadores": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Jogador"
          }
        }
      }
    }
  }
}
